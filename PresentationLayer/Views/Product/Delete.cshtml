@model DataAccessLayer.Model.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<h4>Are you sure you want to delete this product?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Product Name</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Stock Quantity</dt>
        <dd class="col-sm-10">@Model.StockQuantity</dd>

        <dt class="col-sm-2">Is Available</dt>
        <dd class="col-sm-10">@Model.IsAvailable</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
